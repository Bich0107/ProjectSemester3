@model ProjectSemester3.Models.Currency

<h3>Add currency testing</h3>

<form method="post" asp-area="admin" asp-controller="currency" asp-action="add">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" asp-for="Name"/></td>
        </tr>
        <tr>
            <td>Fullname</td>
            <td><input type="text" asp-for="Fullname" /></td>
        </tr>
        <tr>
            <td>Exchange rate</td>
            <td><input type="number" asp-for="ExchangeRate" min="1" step="0.01"/></td>
        </tr>
        <tr>
            <td>Default</td>
            <td>
                <input type="checkbox" asp-for="Default" />
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Save" asp-area="admin" asp-controller="currency" asp-action="add" /></td>
        </tr>
    </table>
</form>