
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#accountObjGrid').DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "pageLength": 5,
            "ajax": {
                "url": "loadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ],
            "columns": [
                { "data": "id", "name": "Id", "autoWidth": true, "defaultContent": "<i>Not set</i>"},
                { "data": "name", "name": "Name", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "birthday", "name": "Birthday", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "phoneNumber", "name": "PhoneNumber", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "email", "name": "Email", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "address", "name": "Address", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "job", "name": "Job", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "gender", "name": "Gender", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "idNum", "name": "IdNum", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "username", "name": "Username", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "createdDate", "name": "CreatedDate", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                { "data": "locked", "name": "Locked", "autoWidth": true , "defaultContent": "<i>Not set</i>"},
                {
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-info" href="???' + full.Id + '">Edit</a>';
                    }
                },
                {
                    data: null, render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.Id + "'); >Delete</a>";
                    }
                }
            ]
        });
    });
</script>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="accountObjGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Birthday</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Job</th>
                    <th>Gender</th>
                    <th>IdNum</th>
                    <th>Username</th>
                    <th>CreatedDate</th>
                    <th>Locked</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


