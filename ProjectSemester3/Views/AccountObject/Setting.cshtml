@{
    ViewData["title"] = "Banking Online";
    ViewData["pageName"] = "Setting";
    ViewData["controller"] = "accountobject";
    ViewData["action"] = "setting";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-sm-12">
        <!-- Material tab card start -->
        <div class="card">
            <div class="card-header">
                <h4>Page Settings</h4>
            </div>
            <div class="card-block">
                <!-- Row start -->
                <div class="row ">
                    <div class="col-lg-12 col-xl-12">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#home3" role="tab"><h6>Change Password</h6></a>
                                <div class="slide"></div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#profile3" role="tab"><h6>Authentication</h6></a>
                                <div class="slide"></div>
                            </li>

                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content card-block">
                            <div class="tab-pane active" id="home3" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-8">
                                        <div class="card text-center">
                                            <div class="card-block ">
                                                <h6>Choose a strong password and don't reuse it for other accounts</h6>
                                                <form class="form-material mt-3">
                                                    <div class="form-group form-default form-primary">
                                                        <input type="password" name="footer-email" class="form-control" required="">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Password</label>
                                                    </div>
                                                    <div class="form-group form-default form-primary">
                                                        <input type="password" name="footer-email" class="form-control" required="">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">New Password</label>
                                                    </div>
                                                    <div class="form-group form-default form-primary">
                                                        <input type="password" name="footer-email" class="form-control" required="">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Re Enter Password</label>
                                                    </div>
                                                    <div class="text-center mt-5"><input type="button" name="next" class="btn btn-primary" value="Save change" /></div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="profile3" role="tabpanel">
                                <div class="mt-2">
                                    <h4>Protect your account with 2-Step Verification</h4>
                                    <label for="">Every time you sign in to your Account, you'll need your password and verification code.</label>
                                    <div class="row mt-3">
                                        <div class="col-md-2 col-12 "><img src="assets/images/security1.PNG" alt=""></div>
                                        <div class="col-md-10 col-12 pt-4">
                                            <b>Looking for more information</b> <br><br>
                                            Add an extra layer of security Enter the unique password and verification code sent to your phone.
                                        </div>
                                        <div class="col-md-2 col-12 pl-1"><div class="col-md-2 col-12 "><img src="assets/images/security2.PNG" alt=""></div></div>
                                        <div class="col-md-10 col-12 pt-4">
                                            <b>Avoid the bad guys</b> <br><br>
                                            Even if someone gets your password, it won't be enough to log into your account.
                                        </div>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="data-table-main icon-list-demo">
                                        <div class="row text-right">
                                            <div class=" col-md-10 outer-ellipsis">
                                                <label class="switch">
                                                    <input type="checkbox">
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>
                                        </div>
                                        <!-- end of data table -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Row end -->
            </div>
        </div>
        <!-- Material tab card end -->
    </div>
</div>