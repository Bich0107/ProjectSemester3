@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container">

        <div class="section-title">
            <h2>Accounts</h2>
        </div>

        <form method="get" asp-controller="home" asp-action="index">
            <div class="container-fluid">
                <div class="container">
                    <fieldset class="border">
                        <legend class="col-md-4">Account Information</legend>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-6">
                                <table class="table text-left">
                                    <tr>
                                        <th style="border-top:none !important">Account Number</th>
                                        <td style="border-top:none !important">
                                            <select>
                                                <option>11123456</option>
                                                <option>12345676</option>
                                                <option>85296396</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="border-top:none !important">Currency Type</th>
                                        <td style="border-top:none !important">VND</td>
                                    </tr>
                                    <tr>
                                        <th style="border-top:none !important">Current balance</th>
                                        <td style="border-top:none !important">1000000000</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </fieldset>
                </div>
                <div class="container mt-5">
                    <fieldset class="border">
                        <legend class="col-md-3">Quick search</legend>
                        <div class="container ml-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="radio" name="QuickSearch" id="10" checked />
                                    <label>Last 10 transactions</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="radio" name="QuickSearch" id="10" />
                                    <label>Transaction within 1 month</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="radio" name="QuickSearch" id="10" />
                                    <label>Transaction within 3 months</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <button type="submit" class="btn btn-primary mb-2">Submit</button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </div>
                <div class="container mt-5">
                    <fieldset class="border">
                        <legend class="col-md-3">Search By</legend>
                        <div class="container ml-4">
                            <label><b>Date</b></label>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>From</label>
                                    <input type="date" />
                                </div>
                                <div class="col-md-4">
                                    <label>To</label>
                                    <input type="date" />
                                </div>
                            </div>
                            <label><b>Amount</b></label>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>From</label>
                                    <input type="text" />
                                </div>
                                <div class="col-md-4">
                                    <label>To</label>
                                    <input type="text" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <button type="submit" class="btn btn-primary mb-2">Submit</button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
        </form>

    </div>
</section><!-- End About Section -->
