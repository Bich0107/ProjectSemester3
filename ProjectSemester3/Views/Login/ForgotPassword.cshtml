@{
    ViewData["title"] = "Forfot Password";
    Layout = "_LoginLayout";
}
@model ProjectSemester3.Models.AccountObject;
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <form method="post" asp-controller="login" asp-action="forgotPassword" class="md-float-material form-material">
                    <div class="auth-box card">
                        <div class="card-block">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Forgot Password</h3>
                                </div>
                            </div>
                            <div>
                                <span style="color:red;font-size:14px;">@ViewBag.resetPasswordSuccess</span>
                            </div>
                            <div class="row">
                                <div class="form-group form-primary col-md-6">
                                    <input type="text" asp-for="PhoneNumber" class="form-control" required="">
                                    <span class="form-bar"></span>
                                    <label class="float-label ml-3">Phone Number</label>
                                </div>
                                <div class="form-group form-primary col-md-6">
                                    <input type="text" asp-for="IdNum" class="form-control" required="">
                                    <span class="form-bar"></span>
                                    <label class="float-label ml-3">Identity Number</label>
                                </div>
                            </div>
                            <div class="form-group form-primary">
                                <input type="email" asp-for="Email" class="form-control" required="">
                                <span class="form-bar"></span>
                                <label class="float-label">Your Email Address</label>
                                <b class="text-inverse text-right m-b-0">
                                    Enter the email address you used during the registration on Banking Online. Then we'll email a link to this address.
                                </b>
                            </div>
                            <div>
                                <span style="color:red;font-size:14px;">@ViewBag.resetPasswordFailed</span>
                            </div>
                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Get New Password</button>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse text-left m-b-0">Thank you.</p>
                                    <p class="text-inverse text-left"><a asp-controller="login" asp-action="login"><b>Back to Login</b></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>