@{
    ViewData["title"] = "Login";
    Layout = "_LoginLayout";
}
@model ProjectSemester3.Models.AccountObject;
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <!-- Authentication card start -->

            <form method="post" asp-controller="login" asp-action="login" class="md-float-material form-material">
                <div class="text-center">
                    <img src="~/assets/images/logo.png" alt="logo.png">
                </div>
                <div class="auth-box card">
                    <div class="card-block">
                        <div class="row m-b-20">
                            <div class="col-md-12">
                                <h3 class="text-center">Sign In</h3>
                            </div>
                        </div>
                        <div class="form-group form-primary">
                            <input type="text" asp-for="Username" class="form-control" required="required">
                            <span class="form-bar"></span>
                            <label class="float-label">Username</label>
                        </div>
                        <div class="form-group form-primary">
                            <input type="password" asp-for="Password" class="form-control" required="required">
                            <span class="form-bar"></span>
                            <label class="float-label">Password</label>
                        </div>
                        <div>
                            <span style="color:red;font-size:14px;">@ViewBag.loginFailed</span>
                        </div>
                        <div class="row m-t-25 text-left">
                            <div class="col-12">
                                <div class="forgot-phone text-right f-right">
                                    <a asp-controller="login" asp-action="forgotPassword" class="text-right f-w-600"> Forgot Password?</a>
                                </div>                                
                            </div>
                        </div>
                        <div class="row m-t-30">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Sign in</button>
                            </div>
                            <div class="col-md-12 text-right f-right">
                                <p class="text-right f-w-600">Don't have an account? &nbsp;<a asp-controller="login" asp-action="signup">Sign up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- end of form -->
        </div>
        <!-- end of col-sm-12 -->
    </div>
    <!-- end of row -->
</div>
